<Window x:Class="ProtectEyes.NotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtectEyes"
        mc:Ignorable="d"
        WindowState="Normal"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Notify" Height="200" Width="300">
    <Grid>
        <Label  HorizontalAlignment="Left" Height="24" Content="{Binding RestDesc, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="280" Background="#FF3FB7FF" Foreground="#FFECEAFA"/>
        <Image HorizontalAlignment="Left" Height="172" Margin="0,24,0,0" Stretch="Fill" Source="{Binding RestPic}" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="CloseButton" x:FieldModifier="public" Content="×" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click" Background="#FFFF8198" Foreground="#FFF7F7F7" FontSize="16"/>
    </Grid>
</Window>
